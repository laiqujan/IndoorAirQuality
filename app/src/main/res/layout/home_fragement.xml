<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_launcher_indoor_2"
        tools:context="HomeFragement">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3d6b89"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/temperature"
                                android:drawableBottom="@mipmap/ic_launcher_temp"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/green"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/temperatureHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Temp History"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#668475"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableBottom="@mipmap/ic_launcher_carbon"
                                android:id="@+id/carbon"
                                android:layout_marginTop="0dp"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:textSize="24dp"
                                android:textColor="@color/yello"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/carbonHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Carbon History"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3d6b89"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/humidity"
                                android:drawableBottom="@mipmap/ic_launcher_hum"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/green"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/humidityHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Humidity History"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#668475"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableBottom="@mipmap/ic_launcher_noise"
                                android:id="@+id/noise"
                                android:layout_marginTop="0dp"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:textSize="24dp"
                                android:textColor="@color/yello"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/noiseHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Noise History"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#3d6b89"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:drawableBottom="@mipmap/ic_launcher_light"
                                android:layout_marginTop="0dp"
                                android:id="@+id/light"
                                android:text=""
                                android:textSize="24dp"
                                android:textColor="@color/fair_color"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/lightHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Light History"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#668475"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableBottom="@mipmap/ic_launcher_nitrogen"
                                android:layout_marginTop="0dp"
                                android:textAlignment="textEnd"
                                android:id="@+id/nitrogen"
                                android:text=""
                                android:textSize="24dp"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/lightgray" />

                            <Button
                                android:id="@+id/nitrogenHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/background_color"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:text="Nitrogen History"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
            /

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>