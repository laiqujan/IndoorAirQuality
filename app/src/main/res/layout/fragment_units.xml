<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context=".UnitsFragment"
        android:background="@color/background_color"
        android:padding="20dp">
       <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="UNITS"
            android:textColor="@color/white_greyish"
            android:textSize="25sp"
            android:textStyle="bold" />

       <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_temp"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:text="   Temperature                      Â°C"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_hum"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:text="   Humidity                             %"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish"
        />
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_carbon"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="   Carbon Monoxide             ppm"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white_greyish"
        />
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_nitrogen"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="   Nitrogen Oxide                  ppm"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_noise"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="   Noise                                   dB"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish"
        />
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/ic_launcher_light"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="   Light                                     lux"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

        <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white_greyish"
        />

</LinearLayout>